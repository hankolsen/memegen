  "license": "MIT",
  "description": "A meme generator in NodeJs",
  "keywords": [
    "meme",
    "memegenerator",
    "image",
    "fun"
  ],
  "bugs": {
    "url": "https://github.com/hankolsen/memegen/issues"
  },
  "repository": {
